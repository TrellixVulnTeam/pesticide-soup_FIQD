/*estilos del open space con video*/

#ospacevideo_bloque{

                width:370px;

                height:320px;

                background-color:#363636;

                padding:20px;

                color:#FFF;

                font-family:Arial, Helvetica, sans-serif;

                font-size:14px;

}

 

.ospacevideo_titulo{

                font-size:26px;
                line-height: 28px;
                font-weight:bold;
                margin:0px;
}

 

.ospacevideo_advice{

                color:#68cb00;

}

 

.ospacevideo_boton{

                display:block;
                width:196px;
                height:34px;
                background:url(/argentina/Global/argentina/graphics/video_contenedor/btn-bg.jpg);
                font-size:25px;
                font-weight:bold;
                color:#FFF;
                text-decoration:none;
                letter-spacing:-0.5px;
                padding:8px 12px 8px 12px;
                margin-top:5px;
                margin-bottom:15px;
}

 

#compartilo{

                font-size:13px;
}

 

#compartilo ul{

                padding-left:0px;

                margin:0px;

}

 

#compartilo li{

                list-style:none;

                padding-bottom:2px;

}

 

#compartilo li a{

                color:#FFF;

                margin-left:10px;

                text-decoration:none;

}

 

#compartilo li a:hover{

                text-decoration:underline;

}

 

.ospacevideo_left{

                float:left;

}

